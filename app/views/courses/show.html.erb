<p id="notice"><%= notice %></p>

<h1>Grades For: <%= @course.name  %></h1>

<table>
  <thead>
    <tr>
      <th>Student Id</th>
      <th>Student Name</th>
      <th>Percentage</th>
      <th>Lettergrade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student.id %></td>
        <td><%= enrollment.student.name %></td>
        <td><%= enrollment.percentage %>%</td>
        <td><%= enrollment.lettergrade %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="/histogram/<%= @course.id %>" class="btn btn-success">Assign Grades</a>
<br>

